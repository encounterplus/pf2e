{
  "debug": false,
  "spacing": 8,
  "padding": [
    20,
    20,
    20,
    20
  ],
  "views": [
    {
      "type": "vStack",
      "spacing": -1,
      "views": [
        {
          "type": "hStack",
          "alignment": "bottom",
          "views": [
            {
              "value": "{{name|uppercase}}",
              "style": "stats-title",
              "link": "https://www.google.com/search?tbm=isch&q=pf+2e+{{name}}"
            },
            {
              "value": "CREATURE {{data.level|default: '0'}}",
              "alignment": "trailing",
              "style": "stats-title",
              "width": -1,
            },
          ]
        },
        {
          "type": "divider",
          "bgColor": "#000000",
          "height": 1.5,
          "padding": [0]
        },
      ]
    },
    {
      "type": "flow",
      "spacing": 0,
      "views": [
        {
          "type": "label",
          "value": "{{data.rarity|map: 'Rarity'}}",
          "style": "trait",
          "bgColor": "#8F5441",
          "padding": [4, 8],
          "borderColor": "#d8c384",
          "borderWidth": 2,
          "visibleIf": "data.rarity != '' and data.rarity != 'common'",
          "link": "/trait/{{data.rarity|map: 'Rarity'}}"
        },
        {
          "type": "label",
          "value": "{{data.size|map: 'Size'}}",
          "style": "trait",
          "bgColor": "#3a7a58",
          "padding": [4, 8],
          "borderColor": "#d8c384",
          "borderWidth": 2,
        },
        {
          "type": "list",
          "attribute": "data.traits",
          "views": [
            {
              "type": "label",
              "value": "{{value}}",
              "style": "trait",
              "bgColor": "#58180D",
              "padding": [4, 8],
              "borderColor": "#d8c384",
              "borderWidth": 2,
              "link": "/trait/{{value}}"
            },
          ]
        },
      ]
    },
    {
      "type": "text",
      "style": "stats-body",
      "value": "{% include \"creature-primary.md\" %}",
    }, 
    {
      "type": "divider",
      "padding": [0],
    }, 
    {
      "type": "text",
      "style": "stats-body",
      "value": "{% include \"creature-secondary.md\" %}",
    }, 
    {
      "type": "divider",
      "padding": [0],
    }, 
    {
      "type": "text",
      "style": "stats-body",
      "value": "{% include \"creature-tertiary.md\" %}",
    }, 
    {
      "type": "divider",
      "padding": [0],
    }, 
    {
      "type": "text",
      "value": "{{descr}}",
    },
    {
      "type": "text",
      "title": "Common.Notes",
      "value": "{{notes}}",
    },
    {
      "type": "image",
      "value": "{{image}}",
      "link": "{{image}}"
    },
    {
      "type": "text",
      "value": "{{footer}}"
    }, 
    {
      "type": "tags",
      "attribute": "tags"
    }
  ]
}