{
  "debug": false,
  "spacing": 8,
  "padding": [ 20 ],
  "views": [
    {
      "type": "vStack",
      "spacing": -1,
      "views": [
        {
          "type": "hStack",
          "alignment": "bottom",
          "spacing": 4,
          "views": [
            {
              "value": "{{name|uppercase}}{% if data.stage > 0 %} {{data.stage}}{% endif %}",
              "style": "stats-title",
              "alignment": "leading",
              "width": -1,
            },
            {
              "type": "icon",
              "value": "{{icon}}",
              "color": "#000",
              "height": 26,
              "width": 30
            },
            // {
            //   "type": "spacer"
            // },
            {
              "value": "{{'Common.Effect'|l|uppercase}}",
              "alignment": "trailing",
              "style": "stats-title",
              // "width": -1,
            },
          ]
        },
        {
          "type": "divider",
          "bgColor": "#000000",
          "height": 1.5,
          "padding": [ 0 ]
        },
      ]
    },
    {
      "type": "hStack",
      "views": [
        {
          "type": "vStack",
          "spacing": 0,
          "views": [
            {
              "type": "flow",
              "spacing": 0,
              "views": [
                {
                  "type": "label",
                  "value": "{{entityTitle}}",
                  "style": "trait",
                  "bgColor": "#8F5441",
                  "padding": [ 4, 8 ],
                  "borderColor": "#d8c384",
                  "borderWidth": 2,
                }
              ]
            },
            {
              "type": "text",
              "style": "stats-body",
              "value": "{% include \"status-effect-primary.md\" %}",
            },
          ]
        },
        // {
        //   "type": "icon",
        //   "value": "{{icon}}",
        //   "color": "#fff",
        //   "bgColor": "#666",
        //   "cornerRadius": 6,
        //   "alignment": "center",
        //   "width": 50,
        //   "height": 50,
        // },
      ]
    },

    {
      "type": "divider",
      "padding": [ 0 ],
    },
    {
      "type": "hStack",
      "spacing": 2,
      "views": [
        {
          "style": "stats-body-bold",
          "value": "{{'StatusEffect.Stage'|l}}",
          "width": -1,
          "padding": [ 0, 0, 0, 2 ]
        },
        {
          "type": "checkboxGroup",
          "attribute": "data.stage",
          "custom": {
            "range": {
              "max": 6
            },
          },
        },
      ]
    },
    {
      "type": "divider",
      "padding": [ 0 ],
    },
    {
      "type": "text",
      "value": "{{descr}}",
      "style": "stats-body",
    },
    {
      "type": "text",
      "title": "Common.Notes",
      "value": "{{notes}}",
    }
  ]
}