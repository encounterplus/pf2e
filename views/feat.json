{
  "debug": false,
  "spacing": 8,
  "padding": [
    20,
    20,
    20,
    20
  ],
  "footer": true,
  "images": false,
  "views": [
        {
      "type": "vStack",
      "spacing": -1,
      "views": [
        {
          "type": "hStack",
          "alignment": "bottom",
          "views": [
            {
              "value": "{{name|uppercase}}",
              "style": "stats-title",
              "width": -1
            },
            {
              "type": "image",
              "value": "/icons/actions/{{data.actions}}.png",
              "color": "#000",
              "height": 26,
              "visibleIf": "data.actions"
            },
            {
              "type": "spacer"
            },
            {
              "value": "{{'Entity.Feat'|l|uppercase}} {{data.level|default: '0'}}",
              "alignment": "trailing",
              "style": "stats-title",
              "width": -1,
            },
          ]
        },
        {
          "type": "divider",
          "bgColor": "#000000",
          "height": 1.5,
          "padding": [0]
        },
      ]
    },
    {
      "type": "flow",
      "spacing": 0,
      "views": [
        {
          "type": "label",
          "value": "{{data.rarity|map: 'Rarity'}}",
          "style": "trait",
          "bgColor": "#8F5441",
          "padding": [4, 8],
          "borderColor": "#d8c384",
          "borderWidth": 2,
          "visibleIf": "data.rarity != '' and data.rarity != 'common'",
          "link": "/trait/{{data.rarity|map: 'Rarity'}}"
        },
        {
          "type": "list",
          "attribute": "data.traits",
          "views": [
            {
              "type": "label",
              "value": "{{value}}",
              "style": "trait",
              "bgColor": "#58180D",
              "padding": [4, 8],
              "borderColor": "#d8c384",
              "borderWidth": 2,
              "link": "/trait/{{value}}"
            },
          ]
        },
      ]
    },
    {
      "type": "text",
      "style": "stats-body",
      "value": "**{{'Feat.Prerequisites'|l}}** {{data.prerequisites}}",
      "visibleIf": "data.prerequisites"
    }, 
    {
      "type": "divider",
      "padding": [0],
    },
    {
      "type": "text",
      "value": "{{descr}}",
      "style": "stats-body",
    },
    {
      "type": "divider",
      "padding": [0],
    },
    {
      "type": "text",
      "title": "Common.Notes",
      "value": "{{notes}}",
    },
    {
      "type": "image",
      "value": "{{image}}",
      "link": "{{image}}"
    },
    {
      "type": "text",
      "value": "{{footer}}"
    }, 
    {
      "type": "tags",
      "attribute": "tags"
    }
  ]
}