{
  "debug": false,
  "spacing": 8,
  "padding": [
    20,
    20,
    20,
    20
  ],
  "footer": true,
  "images": false,
  "views": [
    {
      "type": "vStack",
      "spacing": -1,
      "views": [
        {
          "type": "hStack",
          "alignment": "bottom",
          "views": [
            {
              "value": "{{name|uppercase}}",
              "style": "stats-title",
            },
            {
              "value": "FEAT {{data.level|default: '0'}}",
              "alignment": "trailing",
              "style": "stats-title",
              "width": -1,
            },
          ]
        },
        {
          "type": "divider",
          "bgColor": "#000000",
          "height": 1.5,
          "padding": [0]
        },
      ]
    },
    {
      "type": "flow",
      "spacing": 0,
      "views": [
        {
          "type": "list",
          "attribute": "data.traits",
          "views": [
            {
              "type": "label",
              "value": "{{self}}",
              "style": "trait",
              "bgColor": "#58180D",
              "padding": [4, 8],
              "borderColor": "#d8c384",
              "borderWidth": 2,
              "link": "/trait/{{self}}"
            },
          ]
        },
      ]
    },
    {
      "type": "text",
      "style": "stats-body",
      "value": "{{data.prerequisites|field: '**Prerequisites**'}}",
    }, 
    {
      "type": "divider",
      "padding": [0],
    },
    {
      "type": "text",
      "value": "{{descr}}",
      "style": "stats-body",
    },
    {
      "type": "divider",
      "padding": [0],
    }
  ]
}